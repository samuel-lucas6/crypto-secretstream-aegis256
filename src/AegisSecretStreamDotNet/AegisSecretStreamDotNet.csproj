<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>1.0.0</Version>
        <Authors>Samuel Lucas</Authors>
        <Description>Libsodium's crypto_secretstream using AEGIS-256.</Description>
        <Copyright>Copyright (c) 2024 Samuel Lucas</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/samuel-lucas6/crypto-secretstream-aegis256</PackageProjectUrl>
        <RepositoryUrl>https://github.com/samuel-lucas6/crypto-secretstream-aegis256</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>libsodium aegis256 secretstream stream-encryption</PackageTags>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Geralt" Version="3.0.1" />
    </ItemGroup>

</Project>
